extends ../layout.pug

block content
    form.text-white(action="/login" method="POST" enctype="application/x-www-form-urlencoded")
        .form-group
            label(for="username") Username:
            input.form-control#username(type="text" name="username")
        .form-group
            label(for="password") Password:
            input.form-control#password(type="password" name="password")
        input.btn.btn-primary(type="submit" value="Log In")
        span(style="float: right;") #[a(href="/signup") Sign Up]