doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        
        title="Idea Storage"
        
        link(href="/public/css/bootstrap-custom.scss"
             rel="stylesheet")
        link(href="/public/css/main.scss"
             rel="stylesheet")

        script(src="https://code.jquery.com/jquery-3.6.0.min.js"
               integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
               crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
               integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
               crossorigin="anonymous")
        
        block head
    
    body
        nav#header.navbar.navbar-expand-lg.navbar-dark.bg-primary
            .container-fluid
                a.navbar-brand(href="/") Idea Storage
                button.navbar-toggler(type="button"
                                      data-bs-toggle="collapse"
                                      data-bs-target="#dropdown"
                                      aria-controls="dropdown"
                                      aria-expanded="false"
                                      aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                .collapse.navbar-collapse#dropdown
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link(href="/ideas") All Ideas
                    ul.navbar-nav.ms-auto
                        if user
                            li.nav-item #[a.nav-link(href="/logout") Log out]
                        else
                            li.nav-item #[a.nav-link(href="/login") Log in]
        main.container.mt-2
            if successMessages
                each m in successMessages
                    div.alert.alert-success.alert-dismissible.fade.show(role="alert")
                        span= m
                        button.btn-close(data-bs-dismiss="alert" aria-label="Close")
            if errorMessages
                each m in errorMessages
                    div.alert.alert-danger.alert-dismissible.fade.show(role="alert")
                        span= m
                        button.btn-close(data-bs-dismiss="alert" aria-label="Close")
    
            block content
