extends ../layout.pug

block head
    script(src="https://cdn.jsdelivr.net/npm/marked/marked.min.js")
    script(src="/public/js/ideas/render.js")

block content
    .card.text-white(style="background-color: #303133;")
        .card-header.text-muted= idea.category
        .card-body
            h3.card-title= idea.title
            p#content.cart-text= idea.content
    #util
        a(href="/ideas/" + idea._id + "/edit") #[button.btn.btn-secondary Edit]
        a(href="/ideas/" + idea._id + "/delete" style="float: right;") #[button.btn.btn-secondary Delete]
